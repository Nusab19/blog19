---
import { Image } from 'astro:assets';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  compress?: boolean;
  quality?: number;
}

const { 
  src, 
  alt, 
  width = 1200, 
  height = 630, 
  class: className, 
  compress = false,
  quality = 80
} = Astro.props;
---

{
  typeof src === 'string' ? (
    // For string paths (public or external URLs), we can't use compression
    <img
      src={src}
      alt={alt}
      width={width}
      height={height}
      class={className}
    />
  ) : compress ? (
    // Use Image component with compression for imported images
    <Image
      src={src}
      alt={alt}
      width={width}
      height={height}
      class={className}
      quality={quality}
    />
  ) : (
    // No compression for imported images
    <img
      src={src.src}
      alt={alt}
      width={width}
      height={height}
      class={className}
    />
  )
}