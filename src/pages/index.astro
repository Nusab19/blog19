---
import BlogCard from '@/components/BlogCard.astro'
import Container from '@/components/Container.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'
import { type CollectionEntry, getCollection } from 'astro:content'

const allPosts = await getCollection(
  'blog',
  ({ data }) => !data.draft && !data.hidden,
)

const posts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE)

const postsByYear = posts.reduce(
  (acc: Record<string, CollectionEntry<'blog'>[]>, post) => {
    const year = post.data.date.getFullYear().toString()
    ;(acc[year] ??= []).push(post)
    return acc
  },
  {},
)

const years = Object.keys(postsByYear).sort((a, b) => parseInt(b) - parseInt(a))
---

<Layout title="Home" description={SITE.DESCRIPTION}>
  <Container class="flex grow flex-col gap-y-12">
    <section class="flex flex-col gap-y-4">
      <h1 class="text-2xl font-bold md:text-4xl">Hi, I'm Nusab Taha ðŸ‘‹</h1>
      <p class="text-sm text-muted-foreground md:text-base">
        I'm a software developer who loves building cool stuff on the web. I
        love exploring new technologies.
        <br />
        I write about my findings, and sharing knowledge with others.
      </p>
      <div class="flex flex-wrap gap-4 text-sm md:text-base">
        <a href="/about" class="text-nowrap text-primary hover:underline"
          >More about me â†’</a
        >
        <a
          href="https://nusab19.pages.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="text-nowrap text-extra hover:underline">Portfolio Website â†—</a
        >
      </div>
    </section>

    <div class="flex min-h-[calc(100vh-18rem)] flex-col gap-y-8">
      {
        years.map((year) => (
          <section class="flex flex-col gap-y-4">
            <div class="font-semibold">{year}</div>
            <ul class="not-prose flex flex-col gap-4">
              {postsByYear[year].map((post) => (
                <li>
                  <BlogCard post={post} />
                </li>
              ))}
            </ul>
          </section>
        ))
      }
    </div>

    <div class="flex items-center justify-center">
      <a
        href="/blog"
        class={cn(
          buttonVariants({ variant: 'outline' }),
          'rounded-xl group flex items-center gap-x-2',
        )}
      >
        All blogs
        <Icon
          name="lucide:arrow-right"
          class="size-4 transition-transform group-hover:translate-x-1"
        />
      </a>
    </div>
  </Container>
</Layout>
